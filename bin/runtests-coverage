#!/bin/bash

TARGET="${1/%.php/}"
if test -z "$TARGET" ; then
    TARGET="AllTestsUnit"
fi

BINDIR="$( cd "$( dirname "$0" )" && pwd )"
rm -Rf ${BINDIR}/../../report
${BINDIR}/phpunit --coverage-clover ${BINDIR}/../../report/clover.xml --coverage-html ${BINDIR}/../../report/html --bootstrap ${BINDIR}/../oxid-esales/testing_library/bootstrap.php -c ${BINDIR}/../../phpunit.xml $1 $2 $3 $4 $5 $6 $7 $8 $9 ${TARGET//\//_}