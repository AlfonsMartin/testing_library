 * See LICENSE file for license details.
 */

require_once __DIR__ .'/../base.php';

$testConfig = new OxidEsales\TestingLibrary\TestConfig();

$arguments = array();
array_shift($argv);
foreach ($argv as $argument) {
    $arguments[] = (strpos($argument, '-') === 0) ? $argument : escapeshellarg($argument);
}

$php = getenv('PHPBIN') ? getenv('PHPBIN') : 'php';

$codec = $testConfig->getVendorDirectory() ."/bin/codecept";
if (!file_exists($codec)) {
    $codec = "codecept";
}

$codec = "$php $codec run -c /var/www/oxideshop/tests/Functional ";

$returnCode = 0;

passthru($codec);

exit($returnCode);

/**
 * Runs test suite.
 *
 * @param string $suite     Suite path.
 * @param string $codec     Codeception run command.
 * @param array  $arguments arguments to pass to PHPUnit.
 *
 * @return int Error code.
 */
function runSuite($suite, $codec, $arguments)
{
    $configuration = '';
    if (file_exists($suite ."/phpunit.xml")) {
        $configuration = "-c ". escapeshellarg("$suite/phpunit.xml");
    }

    $arguments = implode(' ', $arguments);
    $return = 0;
    $suite = escapeshellarg($suite);
    passthru("TEST_SUITE=$suite $codec $configuration $arguments", $return);

    return $return;
}
