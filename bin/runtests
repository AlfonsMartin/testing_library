define('TEST_LIBRARY_PATH', __DIR__ .'/../library/');

require_once TEST_LIBRARY_PATH . 'Test_Config.php';
$testConfig = new Test_Config();

$arguments = array();
array_shift($argv);
foreach ($argv as $argument) {
    $arguments[] = (strpos($argument, '-') === 0) ? $argument : escapeshellarg($argument);
}
$arguments = implode(' ', $arguments);

$phpUnit = $testConfig->getVendorPath() ."/bin/phpunit";
if (!file_exists($phpUnit)) {
    $phpUnit = "phpunit";
}

$bootstrap = __DIR__ ."/../bootstrap.php";
$php = getenv('PHPBIN') ? getenv('PHPBIN') : 'php';

if (empty($arguments)) {
    $testSuites = $testConfig->getTestSuites();

    foreach ($testSuites as $suite) {
        passthru("TEST_SUITE=$suite $php $phpUnit --bootstrap $bootstrap $arguments AllTestsUnit");
    }
} else {
    passthru("$php $phpUnit --bootstrap $bootstrap $arguments");
}
